{
    "manifest_version": 3,
    "name": "Quick Notes",
    "version": "1.0.0",
    "description": "Take and manage notes on your browser",
    "author": "Chukwuemeka Nwaneri",
    "icons": {
      "16": "assets/img/Quick-Notes-16.png",
      "32": "assets/img/Quick-Notes-32.png",
      "48": "assets/img/Quick-Notes-48.png",
      "128": "assets/img/Quick-Notes-128.png"
    },
    "permissions": [
      "storage",
      "activeTab",
      "tabs"
    ],
    "optional_permissions": [
      "downloads"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_title": "Quick Notes",
      "default_popup": "main.html",
      "default_icon": {
        "16": "assets/img/Quick-Notes-16.png",
        "32": "assets/img/Quick-Notes-32.png",
        "48": "assets/img/Quick-Notes-48.png",
        "128": "assets/img/Quick-Notes-128.png"
      }
    },
    "background": {
      "service_worker": "assets/js/background.js"
    },

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": [

            "assets/css/content-styles.css"
        ],
        "js": [
            "assets/js/content.js"
        ]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/img/*"
        ],
        "matches": ["<all_urls>"]
      }
    ],
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+Q",
          "mac": "Command+Shift+Q"
        },
        "description": "Toggle Notes Sidebar"
      }
    }
  }
  