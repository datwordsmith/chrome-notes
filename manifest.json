{
    "manifest_version": 3,
    "name": "Quick Notes Sidebar",
    "version": "1.0.0",
    "description": "Take and manage notes in a sidebar with Bootstrap styling",
    "author": "Chukwuemeka Nwaneri",
    "icons": {
      "16": "assets/img/logo.png",
      "32": "assets/img/logo.png",
      "48": "assets/img/logo.png",
      "128": "assets/img/logo.png"
    },
    "permissions": [
      "storage",
      "activeTab",
      "tabs"
    ],
    "optional_permissions": [
      "downloads"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_title": "Toggle Notes Sidebar",
      "default_popup": "main.html",
      "default_icon": {
        "16": "assets/img/logo.png",
        "32": "assets/img/logo.png",
        "48": "assets/img/logo.png",
        "128": "assets/img/logo.png"
      }
    },
    "background": {
      "service_worker": "assets/js/background.js"
    },

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": [
            "assets/css/bootstrap.min.css",
            "assets/css/bootstrap-icons.min.css",
            "assets/css/styles.css"
        ],
        "js": [
            "assets/js/jquery-3.6.0.min.js",
            "assets/js/bootstrap.bundle.min.js",
            "assets/js/content.js"
        ]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/img/*"
        ],
        "matches": ["<all_urls>"]
      }
    ],
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+Q",
          "mac": "Command+Shift+Q"
        },
        "description": "Toggle Notes Sidebar"
      }
    }
  }
  